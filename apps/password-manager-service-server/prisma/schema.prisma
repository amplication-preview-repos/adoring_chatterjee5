datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model AuditLog {
  action     String?
  createdAt  DateTime  @default(now())
  entityId   String?
  entityName String?
  id         String    @id @default(cuid())
  timestamp  DateTime?
  updatedAt  DateTime  @updatedAt
  user       User?     @relation(fields: [userId], references: [id])
  userId     String?
}

model Category {
  createdAt       DateTime        @default(now())
  id              String          @id @default(cuid())
  name            String?
  passwordEntries PasswordEntry[]
  updatedAt       DateTime        @updatedAt
}

model User {
  auditLogs       AuditLog[]
  createdAt       DateTime        @default(now())
  email           String?
  id              String          @id @default(cuid())
  password        String?
  passwordEntries PasswordEntry[]
  updatedAt       DateTime        @updatedAt
  username        String?
}

model PasswordEntry {
  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?
  createdAt  DateTime  @default(now())
  id         String    @id @default(cuid())
  notes      String?
  password   String?
  title      String?
  updatedAt  DateTime  @updatedAt
  url        String?
  user       User?     @relation(fields: [userId], references: [id])
  userId     String?
  username   String?
}
